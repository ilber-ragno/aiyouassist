# =============================================================================
# AIYOU ASSIST - Environment Configuration
# =============================================================================
# IMPORTANTE: Cada cliente = 1 tenant isolado. Nunca misturar dados entre tenants.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
VERSION=latest

# -----------------------------------------------------------------------------
# URLs
# -----------------------------------------------------------------------------
APP_URL=https://meuaiyou.cloud
API_URL=https://api.meuaiyou.cloud
WS_URL=wss://api.meuaiyou.cloud

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_USER=aiyou
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=aiyou_assist

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# -----------------------------------------------------------------------------
# RabbitMQ
# -----------------------------------------------------------------------------
RABBITMQ_USER=aiyou
RABBITMQ_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# -----------------------------------------------------------------------------
# Security Keys (Generate with: openssl rand -base64 32)
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_KEY
SESSION_ENCRYPTION_KEY=CHANGE_ME_GENERATE_SECURE_KEY
CREDENTIAL_ENCRYPTION_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME
OPENAI_API_KEY=sk-CHANGE_ME
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS_PER_REQUEST=4096

# -----------------------------------------------------------------------------
# Billing - Stripe
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# -----------------------------------------------------------------------------
# Billing - Asaas (Brasil)
# -----------------------------------------------------------------------------
ASAAS_API_KEY=CHANGE_ME
ASAAS_WEBHOOK_SECRET=CHANGE_ME

# -----------------------------------------------------------------------------
# Moltbot Gateway (WhatsApp via Baileys)
# -----------------------------------------------------------------------------
MOLTBOT_GATEWAY_TOKEN=CHANGE_ME_GENERATE_SECURE_KEY
CLAUDBOT_WEBHOOK_SECRET=CHANGE_ME_GENERATE_SECURE_KEY

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# Circuit Breaker (Customer API)
# -----------------------------------------------------------------------------
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
